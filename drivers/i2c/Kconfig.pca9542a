	  Should be lower than `I2C_PCA9542A_CHANNEL_INIT_PRIO`

config I2C_PCA9542A_CHANNEL_INIT_PRIO
	int "PCA9542A channel driver init priority"
	default I2C_INIT_PRIORITY
