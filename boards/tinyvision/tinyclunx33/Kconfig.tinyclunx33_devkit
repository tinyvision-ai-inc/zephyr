config BOARD_TINYCLUNX33_DEVKIT
	# RTL releases supported for the tinyCLUNX33 Devkit Rev1 (End-of-Life status)
	select SOC_TINYCLUNX33V008 if BOARD_TINYCLUNX33_DEVKIT_REV1_TINYCLUNX33V008
	select SOC_TINYCLUNX33V009 if BOARD_TINYCLUNX33_DEVKIT_REV1_TINYCLUNX33V009
	select SOC_TINYCLUNX33V010 if BOARD_TINYCLUNX33_DEVKIT_REV1_TINYCLUNX33V010

	# RTL releases supported for the tinyCLUNX33 Devkit Rev2 (Active status)
	select SOC_TINYCLUNX33V008 if BOARD_TINYCLUNX33_DEVKIT_REV2_TINYCLUNX33V008
	select SOC_TINYCLUNX33V009 if BOARD_TINYCLUNX33_DEVKIT_REV2_TINYCLUNX33V009
	select SOC_TINYCLUNX33V010 if BOARD_TINYCLUNX33_DEVKIT_REV2_TINYCLUNX33V010

	select HAS_FLASH_LOAD_OFFSET
